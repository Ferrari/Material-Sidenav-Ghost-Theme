<!DOCTYPE html>
<html>
    <head>
        {{!Responsive and meta tags}}
        <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="theme-color" content="#263238">
        {{!Title and description}}
        <title>{{meta_title}}</title>
        <meta name="description" content="{{meta_description}}" />
        {{!CSS}}
        <link type="text/css" rel="stylesheet" href="{{asset "assets/css/materialize.min.css"}}" media="screen,projection">
        <link type="text/css" rel="stylesheet" href="{{asset "assets/css/style.min.css"}}" media="screen,projection">  
        {{! Social Meta Tags If you need..}}
        {{! Ghost header injection }}
        {{ghost_head}}
        <script>
            {{> custom/config}}
            window.CUSTVARS = {};
            CUSTVARS.haveGA = typeof ga_ua !== 'undefined' && ga_ua !== 'UA-XXXXX-X';
            CUSTVARS.haveDisqus = typeof disqus_shortname !== 'undefined' && disqus_shortname !== '';
            CUSTVARS.hasSidebarMenu = typeof sidebarVars === 'object' && typeof sidebarVars.social === 'object';
        </script>
    </head>
    <body class="{{body_class}}">
        {{!Sidenav and Navbar}}
        <nav id="nav-trans" class="transparent">
            <a href="{{@blog.url}}" class="brand-logo center">{{@blog.title}}</a>
            <div id="slide-out" class="side-nav fixed blue-grey darken-4">
                <div class="navwrapper container">  
                    <h1 id="nav-head">{{@blog.title}}</h1>
                    <p class="blue-grey-text text-lighten-4">{{@blog.description}}</p>
                    <a href="{{@blog.url}}"><i class="material-icons">&#xE88A;</i> HOME</a>
                    <div class="navmenu-social">
                        {{#if sidebarVars.social.fb}}
                        <a href="https://www.facebook.com/{{sidebarVars.social.fb}}" class="btn-floating">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                        {{/if}}
                        {{#if sidebarVars.social.twitter}}
                        <a href="https://twitter.com/{{sidebarVars.social.twitter}}" class="btn-floating">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                        {{/if}}
                        {{#if sidebarVars.social.email}}
                        <a href="mailto:{{sidebarVars.social.email}}" class="btn-floating">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </a>
                        {{/if}}
                        {{#if sidebarVars.social.github}}
                        <a href="https://github.com/{{sidebarVars.social.github}}" class="btn-floating">
                            <i class="fa fa-github" aria-hidden="true"></i>
                        </a>
                        {{/if}}
                    </div>
                    <form class="search-form">
                      <div class="input-field">
                        <input id="search" type="search" autocomplete="off" required>
                        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                        <i class="material-icons">close</i>
                        <div id="searchresult" class="search-results results-hide"></div>
                      </div>
                    </form>
                </div>
            </div>
            <a href="#" data-activates="slide-out" class="button-collapse">
                <i class="material-icons">&#xE5D2;</i>
            </a>
        </nav>
        {{! Content }}
        {{{ body }}}
        {{!footer}}
        <footer class="page-footer blue-grey darken-3">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12 white-text">
                        <h4>{{@blog.title}}</h4>
                        <p>{{@blog.description}}</p>
                    </div>
                    <div class="col l6 s12 white-text">
                        <h4>About </h4>
                        <p>About urself :D</p>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    <a href="http://creativecommons.org/licenses/by-sa/4.0/">
                              Creative Commons BY-SA 4.0
                    </a> - 2016
                    <div class="right">
                        Powered by <a href="https://ghost.org/">Ghost</a>
                        Theme <a href="https://github.com/SuphanutJui/Material-Sidenav-Ghost-Theme">Material Sidenav</a>
                    </div>
                </div>
            </div>
        </footer> 
        {{!Script}}
        <script src="{{asset "js/jquery-2.1.4.min.js"}}"></script>
        <script src="{{asset "js/jquery.ghosthunter.min.js"}}"></script>
        <script src="{{asset "js/materialize.min.js"}}"></script>
        <script src="{{asset "js/script.min.js"}}"></script>
        {{! Ghost body injection }}
        {{ghost_foot}}
        <script>
          if(CUSTVARS.haveGA) {
            (function(g,h,o,s,t,z){g.GoogleAnalyticsObject=s;g[s]||(g[s]=
              function(){(g[s].q=g[s].q||[]).push(arguments)});g[s].s=+new Date;
              t=h.createElement(o);z=h.getElementsByTagName(o)[0];
              t.src='//www.google-analytics.com/analytics.js';
              z.parentNode.insertBefore(t,z)}(window,document,'script','ga'));
            ga('create',ga_ua);ga('send','pageview');
          }
        </script>
    </body>
</html>
